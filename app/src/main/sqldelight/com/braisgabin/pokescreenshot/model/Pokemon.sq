CREATE TABLE pokemon (
  id INTEGER PRIMARY KEY NOT NULL,
  name TEXT NOT NULL,
  atk INTEGER AS Integer NOT NULL,
  def INTEGER AS Integer NOT NULL,
  stam INTEGER AS Integer NOT NULL,
  candy TEXT NOT NULL,
  evolveCandy INTEGER AS Integer NOT NULL
);

select_by_candy:
SELECT *
FROM pokemon
WHERE candy = ?;

select_by_name:
SELECT *
FROM pokemon
WHERE name = ?;
