<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <com.braisgabin.pokescreenshot.MyListPreference
        android:entries="@array/trainer_lvl_label"
        android:entryValues="@array/trainer_lvl_value"
        android:key="trainer_lvl"
        android:title="@string/trainer_lvl"/>

    <SwitchPreference
        android:defaultValue="true"
        android:key="remove_screenshots"
        android:title="@string/remove_screenshot"/>

    <Preference
        android:persistent="false"
        android:title="@string/about">

        <intent
            android:action="android.intent.action.VIEW"
            android:data="https://github.com/BraisGabin/pokescreenshot"/>
    </Preference>
</PreferenceScreen>
